<div class="erow">
  <% provide(:title, @user.name) %>
  <% @title=" | User | "+@user.name %>
  <%= render 'flash' %>
  
  
  <script> 
     update_title('<%=@title%>'); 
     if (document.readyState==="completed") document.getElementById("page_status").innerHTML = '';
  </script>
  <div class="sectiontitle">
    <%= @user.name.capitalize %><br/>
    <br/>
  </div>
   <div class="erow">
       <% if (@user.firstName and @user.lastName) %> 
         <%= @user.firstName.capitalize+" "+@user.lastName.capitalize %><br/>
       <% end %>
   </div>
  <%     if(signed_in? and ((@user.id==@current_user.id) or (@current_user.role==Role.find_by( :name => 'root')))) %>
   <div class="erow">
       Email: <%= @user.email %>
   </div>
  <%end%>
  <%     if(signed_in? and ((@user.id==@current_user.id) or (@current_user.role==Role.find_by( :name => 'root')))) %>
   <div class="erow">
    <%=  link_to "Edit", '/users/'+@user.name+'/edit', class: "btn btn-small btn-primary", remote: true %><br/>
   </div>
  <%end%>
</div>
